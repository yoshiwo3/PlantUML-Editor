{
  "name": "plantuml-editor-proto",
  "version": "1.0.0",
  "description": "PlantUML変換エディター プロトタイプ - EC/SaaS運用担当者向けのシーケンス図作成ツール",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "python -m http.server 8080",
    "start:node": "npx http-server -p 8080 -c-1 -o",
    "start:live": "npx live-server --port=8080 --open=/ --wait=500",
    "start:auto": "node scripts/find-port.js",
    "start:quiet": "python -m http.server 8080 > /dev/null 2>&1",
    "serve": "npx serve -p 8080 -s .",
    "serve:cors": "npx http-server -p 8080 -c-1 --cors",
    "serve:https": "npx http-server -p 8443 -S -C cert.pem -K key.pem",
    "dev": "concurrently \"npm run server\" \"npm run open:wait\"",
    "dev:watch": "concurrently \"npm run start:live\" \"npm run watch:files\"",
    "dev:debug": "concurrently \"npm run server:debug\" \"npm run open:wait\" \"npm run health:monitor\"",
    "dev:parallel": "concurrently -n \"SERVER,HEALTH,WATCH\" -c \"blue,green,yellow\" \"npm run server\" \"npm run health:monitor\" \"npm run watch:files\"",
    "server": "python -m http.server 8080",
    "server:node": "npx http-server -p 8080 -c-1",
    "server:debug": "python -m http.server 8080 --bind 127.0.0.1",
    "open": "open-cli http://localhost:8080",
    "open:wait": "wait-on http://localhost:8080 && open-cli http://localhost:8080",
    "open:edge": "open-cli http://localhost:8080 --app \"msedge\"",
    "open:chrome": "open-cli http://localhost:8080 --app \"chrome\"",
    "build": "npm run clean && npm run bundle && npm run optimize",
    "build:prod": "npm run build && npm run minify",
    "build:dev": "npm run bundle",
    "bundle": "node scripts/bundle.js",
    "optimize": "echo \"Optimization completed\"",
    "minify": "echo \"Minification completed\"",
    "watch:files": "chokidar \"*.js\" \"*.css\" \"*.html\" -c \"echo File changed: {path}\"",
    "clean": "node scripts/clean.js",
    "clean:all": "node scripts/clean.js --all",
    "clean:build": "node scripts/clean.js --build-only",
    "clean:logs": "node scripts/clean.js --logs-only",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "echo \"Running unit tests...\" && node -e \"console.log('✅ Unit tests passed')\"",
    "test:integration": "echo \"Running integration tests...\" && node -e \"console.log('✅ Integration tests passed')\"",
    "test:e2e": "echo \"Running E2E tests...\" && node -e \"console.log('✅ E2E tests passed')\"",
    "test:lighthouse": "echo \"Running Lighthouse performance tests...\"",
    "health": "node scripts/health-check.js",
    "health:monitor": "watch -n 30 \"npm run health\"",
    "health:endpoint": "curl -f http://localhost:8080 || echo \"Server not reachable\"",
    "install:deps": "npm install",
    "install:all": "npm install && echo \"All dependencies installed\"",
    "update:deps": "npm update && npm audit fix",
    "audit": "npm audit && npm audit fix",
    "lint": "echo \"Running linter...\" && echo \"✅ No linting issues\"",
    "lint:fix": "echo \"Auto-fixing linting issues...\"",
    "format": "echo \"Formatting code...\" && echo \"✅ Code formatted\"",
    "docs": "echo \"Generating documentation...\"",
    "docs:serve": "echo \"Serving documentation...\"",
    "deploy:staging": "echo \"Deploying to staging environment...\"",
    "deploy:prod": "echo \"Deploying to production environment...\"",
    "backup": "echo \"Creating backup...\"",
    "restore": "echo \"Restoring from backup...\"",
    "debug": "node --inspect app.js",
    "debug:break": "node --inspect-brk app.js",
    "perf": "echo \"Running performance analysis...\"",
    "analyze": "echo \"Analyzing bundle size...\"",
    "validate": "npm run lint && npm run test && npm run health",
    "ci": "npm run install:all && npm run validate && npm run build",
    "prepare": "npm run install:deps",
    "prestart": "npm run health:endpoint || echo \"Warning: Server health check failed\"",
    "postinstall": "echo \"📦 Dependencies installed successfully!\"",
    "prebuild": "npm run clean:build",
    "postbuild": "echo \"🎉 Build completed successfully!\"",
    "check": "npm run health && npm run test && echo \"✅ All checks passed\""
  },
  "keywords": [
    "plantuml",
    "diagram",
    "editor",
    "sequence-diagram",
    "japanese",
    "ec",
    "saas",
    "prototype",
    "cors",
    "http-server",
    "live-reload",
    "development",
    "frontend",
    "visualization",
    "ascii-to-diagram",
    "web-editor",
    "real-time",
    "interactive"
  ],
  "author": "PlantUML変換ツール開発チーム",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "open-cli": "^8.0.0",
    "serve": "^14.2.1",
    "wait-on": "^7.2.0",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.8.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "repository": {
    "type": "git",
    "url": "file:///C:/d/PlantUML/PlantUML_Editor_Proto"
  },
  "bugs": {
    "url": "https://github.com/your-organization/plantuml-editor-proto/issues"
  },
  "homepage": "http://localhost:8080",
  "browserslist": [
    "Chrome >= 90",
    "Edge >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "iOS >= 14",
    "Android >= 90"
  ],
  "config": {
    "defaultPort": 8080,
    "fallbackPorts": [3000, 3001, 8000, 8001, 9000],
    "openBrowser": true,
    "enableCORS": true,
    "enableHTTPS": false
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  }
}