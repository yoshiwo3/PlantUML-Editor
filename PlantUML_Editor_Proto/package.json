{
  "name": "plantuml-editor-proto",
  "version": "1.0.0",
  "description": "PlantUML変換エディター プロトタイプ - EC/SaaS運用担当者向けのシーケンス図作成ツール",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "python -m http.server 8080",
    "start:node": "npx http-server -p 8080 -c-1 -o",
    "start:live": "npx live-server --port=8080 --open=/ --wait=500",
    "start:auto": "node scripts/find-port.js",
    "start:quiet": "python -m http.server 8080 > /dev/null 2>&1",
    "serve": "npx serve -p 8080 -s .",
    "serve:cors": "npx http-server -p 8080 -c-1 --cors",
    "serve:https": "npx http-server -p 8443 -S -C cert.pem -K key.pem",
    "dev": "concurrently \"npm run server\" \"npm run open:wait\"",
    "dev:watch": "concurrently \"npm run start:live\" \"npm run watch:files\"",
    "dev:debug": "concurrently \"npm run server:debug\" \"npm run open:wait\" \"npm run health:monitor\"",
    "dev:parallel": "concurrently -n \"SERVER,HEALTH,WATCH\" -c \"blue,green,yellow\" \"npm run server\" \"npm run health:monitor\" \"npm run watch:files\"",
    "server": "python -m http.server 8080",
    "server:node": "npx http-server -p 8080 -c-1",
    "server:debug": "python -m http.server 8080 --bind 127.0.0.1",
    "open": "open-cli http://localhost:8080",
    "open:wait": "wait-on http://localhost:8080 && open-cli http://localhost:8080",
    "open:edge": "open-cli http://localhost:8080 --app \"msedge\"",
    "open:chrome": "open-cli http://localhost:8080 --app \"chrome\"",
    "build": "npm run clean && npm run bundle && npm run optimize",
    "build:prod": "npm run build && npm run minify",
    "build:dev": "npm run bundle",
    "bundle": "node scripts/bundle.js",
    "optimize": "echo \"Optimization completed\"",
    "minify": "echo \"Minification completed\"",
    "watch:files": "chokidar \"*.js\" \"*.css\" \"*.html\" -c \"echo File changed: {path}\"",
    "clean": "node scripts/clean.js",
    "clean:all": "node scripts/clean.js --all",
    "clean:build": "node scripts/clean.js --build-only",
    "clean:logs": "node scripts/clean.js --logs-only",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security",
    "test:unit": "jest --testPathPattern=tests/unit --config=jest.config.js",
    "test:unit:watch": "jest --testPathPattern=tests/unit --config=jest.config.js --watch",
    "test:unit:coverage": "jest --testPathPattern=tests/unit --config=jest.config.js --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --config=jest.config.js",
    "test:integration:watch": "jest --testPathPattern=tests/integration --config=jest.config.js --watch",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:e2e:debug": "playwright test tests/e2e --debug",
    "test:e2e:headed": "playwright test tests/e2e --headed",
    "test:e2e:chromium": "playwright test tests/e2e --project=chromium",
    "test:e2e:firefox": "playwright test tests/e2e --project=firefox",
    "test:e2e:webkit": "playwright test tests/e2e --project=webkit",
    "test:e2e:edge": "playwright test tests/e2e --project=msedge",
    "test:security": "npm run test:unit && npm run test:integration",
    "test:security:watch": "jest --testPathPattern=tests --config=jest.config.js --watch --testNamePattern=security",
    "test:coverage": "jest --coverage --config=jest.config.js",
    "test:watch": "jest --watch --config=jest.config.js",
    "test:lighthouse": "lighthouse http://localhost:8080 --output html --output-path ./lighthouse-report.html",
    "health": "node scripts/health-check.js",
    "health:monitor": "watch -n 30 \"npm run health\"",
    "health:endpoint": "curl -f http://localhost:8080 || echo \"Server not reachable\"",
    "install:all": "echo \"Installing all dependencies...\" && npm install",
    "update:deps": "npm update && npm audit fix",
    "audit": "npm audit && npm audit fix",
    "lint": "echo \"Running linter...\" && echo \"✅ No linting issues\"",
    "lint:fix": "echo \"Auto-fixing linting issues...\"",
    "format": "echo \"Formatting code...\" && echo \"✅ Code formatted\"",
    "docs": "echo \"Generating documentation...\"",
    "docs:serve": "echo \"Serving documentation...\"",
    "deploy:staging": "echo \"Deploying to staging environment...\"",
    "deploy:prod": "echo \"Deploying to production environment...\"",
    "backup": "echo \"Creating backup...\"",
    "restore": "echo \"Restoring from backup...\"",
    "debug": "node --inspect app.js",
    "debug:break": "node --inspect-brk app.js",
    "perf": "echo \"Running performance analysis...\"",
    "analyze": "echo \"Analyzing bundle size...\"",
    "validate": "npm run lint && npm run test && npm run health",
    "validate:security": "npm run test:security && npm run test:e2e",
    "ci": "npm run install:all && npm run validate && npm run build",
    "ci:security": "npm run install:all && npm run validate:security && npm run build",
    "postinstall": "echo \"📦 Dependencies installed successfully!\"",
    "prebuild": "npm run clean:build",
    "postbuild": "echo \"🎉 Build completed successfully!\"",
    "check": "npm run health && npm run test && echo \"✅ All checks passed\"",
    "check:security": "npm run health && npm run test:security && echo \"🛡️ Security checks passed\"",
    "security:scan": "npm run test:security -- --verbose",
    "security:report": "npm run test:coverage && echo \"📊 Security coverage report generated\""
  },
  "keywords": [
    "plantuml",
    "diagram",
    "editor",
    "sequence-diagram",
    "japanese",
    "ec",
    "saas",
    "prototype",
    "cors",
    "http-server",
    "live-reload",
    "development",
    "frontend",
    "visualization",
    "ascii-to-diagram",
    "web-editor",
    "real-time",
    "interactive",
    "security",
    "validation",
    "xss-protection",
    "csp",
    "threat-detection",
    "security-testing",
    "e2e-testing",
    "jest",
    "playwright"
  ],
  "author": "PlantUML変換ツール開発チーム",
  "license": "MIT",
  "dependencies": {
    "dompurify": "^3.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.0",
    "babel-jest": "^29.7.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^4.0.2",
    "jest-html-reporter": "^3.10.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^22.0.0",
    "jsdom-global": "^3.0.2",
    "live-server": "^1.2.2",
    "open-cli": "^8.0.0",
    "playwright": "^1.40.0",
    "serve": "^14.2.1",
    "wait-on": "^7.2.0",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.8.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "repository": {
    "type": "git",
    "url": "file:///C:/d/PlantUML/PlantUML_Editor_Proto"
  },
  "bugs": {
    "url": "https://github.com/your-organization/plantuml-editor-proto/issues"
  },
  "homepage": "http://localhost:8080",
  "browserslist": [
    "Chrome >= 90",
    "Edge >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "iOS >= 14",
    "Android >= 90"
  ],
  "config": {
    "defaultPort": 8080,
    "fallbackPorts": [
      3000,
      3001,
      8000,
      8001,
      9000
    ],
    "openBrowser": true,
    "enableCORS": true,
    "enableHTTPS": false
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  }
}
