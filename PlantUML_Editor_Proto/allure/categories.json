[
  {
    "name": "Product defects",
    "description": "プロダクト機能に関連する不具合",
    "matchedStatuses": ["failed"],
    "messageRegex": ".*Error.*|.*Exception.*|.*Assertion.*"
  },
  {
    "name": "Test defects", 
    "description": "テスト実装やセットアップの問題",
    "matchedStatuses": ["broken"],
    "messageRegex": ".*Test.*Error.*|.*Setup.*|.*Teardown.*"
  },
  {
    "name": "Flaky tests",
    "description": "実行環境に依存する不安定なテスト",
    "matchedStatuses": ["flaky"],
    "messageRegex": ".*timeout.*|.*network.*|.*connection.*"
  },
  {
    "name": "Security Issues",
    "description": "セキュリティ関連の脆弱性や問題",
