{
  "name": "plantuml-editor-e2e-tests",
  "version": "2.0.0",
  "description": "Sprint2 E2E Test Foundation Framework for PlantUML Editor",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:e2e": "playwright test tests/scenarios",
    "test:e2e:fast": "playwright test tests/scenarios --workers=1 --retries=1",
    "test:e2e:ci": "playwright test tests/scenarios --reporter=list --reporter=junit --reporter=json",
    "test:e2e:debug": "playwright test tests/scenarios --debug",
    "test:e2e:headed": "playwright test tests/scenarios --headed",
    "test:e2e:ui": "playwright test tests/scenarios --ui",
    "test:unit": "jest --config=config/jest.config.js",
    "test:integration": "jest --config=config/jest.integration.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:basic": "playwright test tests/scenarios/basic",
    "test:foundation": "playwright test tests/scenarios/foundation",
    "test:editor": "playwright test tests/scenarios/editor",
    "test:diagrams": "playwright test tests/scenarios/diagrams",
    "test:inline": "playwright test tests/scenarios/inline",
    "test:error": "playwright test tests/scenarios/error",
    "test:performance": "playwright test tests/scenarios/performance",
    "test:security": "playwright test tests/scenarios/security",
    "test:accessibility": "playwright test tests/scenarios/accessibility",
    "test:integration": "playwright test tests/scenarios/integration",
    "test:regression": "playwright test tests/scenarios/regression",
    "test:stress": "playwright test tests/scenarios/stress",
    "test:cross-browser": "playwright test tests/scenarios/cross-browser",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:edge": "playwright test --project=msedge",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "test:health-check": "node utils/health-check.js",
    "test:generate-data": "node utils/generate-test-data.js",
    "test:cleanup": "node utils/cleanup.js",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker:full": "docker-compose up --build --abort-on-container-exit",
    "test:docker:down": "docker-compose down -v",
    "report:generate": "playwright show-report",
    "report:allure": "allure generate reports/allure-results -o reports/allure-reports --clean",
    "report:serve": "allure serve reports/allure-results",
    "mock:start": "node mocks/mock-server.js",
    "mock:test": "node mocks/test-mock-server.js",
    "setup:auth": "node setup/auth-setup.js",
    "setup:data": "node setup/data-setup.js",
    "setup:clean": "rimraf test-results reports auth/state.json",
    "dev": "concurrently \"npm run mock:start\" \"npm run test:e2e:debug\"",
    "ci": "npm run setup:clean && npm run test:e2e:ci",
    "validate": "npm run test:health-check && npm run test:e2e:fast"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "jest",
    "plantuml",
    "automation",
    "docker",
    "ci-cd",
    "foundation"
  ],
  "author": "PlantUML Editor Test Team",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.48.0",
    "playwright": "^1.48.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "devDependencies": {
    "allure-playwright": "^2.15.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "junit-report-builder": "^3.0.1",
    "rimraf": "^5.0.5",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "supertest": "^6.3.3",
    "msw": "^2.0.0"
  },
  "engines": {
    "node": ">=20.18.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "file:///C:/d/PlantUML/PlantUML_Editor_Proto"
  },
  "config": {
    "defaultBrowser": "chromium",
    "testTimeout": 90000,
    "retries": 2,
    "workers": 4
  },
  "volta": {
    "node": "20.18.0",
    "npm": "10.8.1"
  }
}